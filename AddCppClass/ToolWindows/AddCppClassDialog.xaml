<platform:DialogWindow  x:Class="Dwarfovich.AddCppClass.AddCppClassDialog"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:platform="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
                        xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
                        toolkit:Themes.UseVsTheme="False"
                        mc:Ignorable="d"
                        Width="645"
                        Height="263">
    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="390*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="215*"/>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="336*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="2" Margin="0,0,10,1" Grid.RowSpan="3" RenderTransformOrigin="0.456,0.492">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="21*" />
                <ColumnDefinition Width="55*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label Content="Filename style" HorizontalAlignment="Left" VerticalAlignment="Center" Height="32" Width="92"/>
            <RadioButton Content="CamelCase" Grid.Row="1" GroupName="filenameStyleGroup" IsChecked="True" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="105"/>
            <RadioButton Content="snake__case" GroupName="filenameStyleGroup" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="105"/>
            <RadioButton Content="lowercase" GroupName="filenameStyleGroup" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="105"/>
            <Label Content="Header extension" HorizontalAlignment="Left" Margin="105,-6,0,0" VerticalAlignment="Top" Width="104" Grid.ColumnSpan="2"/>
            <RadioButton Content=".h" GroupName="headerExtensionGroup" IsChecked="True" HorizontalAlignment="Left" Margin="105,0,0,0" Grid.Row="1" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
            <RadioButton Content=".hpp" GroupName="headerExtensionGroup" HorizontalAlignment="Left" Margin="105,0,0,0" Grid.Row="2" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
        </Grid>
        <Label Grid.Column="1" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="38"/>
        <Label Grid.Column="1" Content="Label" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Height="26" Width="38"/>
        <TextBox x:Name="ClassNameTextBox" Grid.Column="1"  HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" Width="200" Height="18"/>
        <TextBlock IsHitTestVisible="False" Text="Class name" Grid.Column="1" Grid.Row="2" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Height="18" Foreground="DarkGray">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=ClassNameTextBox}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <Label Grid.Column="1" Content="Label" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Center" Height="26" Width="38"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Grid.Row="4" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="200" Height="18"/>
        <Label Grid.Column="2" Content="Subfolder" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Height="26" Width="111" Grid.ColumnSpan="2"/>
        <ComboBox Grid.Column="2" HorizontalAlignment="Left" IsEditable="True" Grid.Row="2" VerticalAlignment="Center" Width="268" Grid.ColumnSpan="2"/>
    </Grid>
</platform:DialogWindow>
