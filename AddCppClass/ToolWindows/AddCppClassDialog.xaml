<platform:DialogWindow  x:Class="Dwarfovich.AddCppClass.AddCppClassDialog"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:platform="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
                        xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
                        xmlns:utils="clr-namespace:Dwarfovich.AddCppClass.Utils"
                        xmlns:local="clr-namespace:Dwarfovich.AddCppClass"
                        toolkit:Themes.UseVsTheme="False"
                        mc:Ignorable="d"
                        Width="645"
                        Height="263">

    <Window.Resources>
        <local:ClassSettings x:Key="ClassName"/>
    </Window.Resources>

    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="215*"/>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="336*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="2" Margin="0,0,10,10" Grid.RowSpan="5" RenderTransformOrigin="0.456,0.492">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="21*" />
                <ColumnDefinition Width="55*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label Content="Filename style" HorizontalAlignment="Left" VerticalAlignment="Center" Height="32" Width="92"/>
            <RadioButton Content="CamelCase" Checked="RadioButtonChecked" Grid.Row="1" GroupName="filenameStyleGroup" IsChecked="True" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="105"/>
            <RadioButton Content="snake__case" Checked="RadioButtonChecked" GroupName="filenameStyleGroup" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="105"/>
            <RadioButton Content="lowercase" Checked="RadioButtonChecked" GroupName="filenameStyleGroup" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="105"/>
            <Label Content="Header extension" HorizontalAlignment="Left" Margin="105,-6,0,0" VerticalAlignment="Top" Width="104" Grid.ColumnSpan="2"/>
            <RadioButton Content=".h" Checked="RadioButtonChecked" GroupName="headerExtensionGroup" IsChecked="True" HorizontalAlignment="Left" Margin="105,0,0,0" Grid.Row="1" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
            <RadioButton Content=".hpp" Checked="RadioButtonChecked" GroupName="headerExtensionGroup" HorizontalAlignment="Left" Margin="105,0,0,0" Grid.Row="2" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
            <Button Grid.Column="1" Name="AddClassButton"  Content="Add class" HorizontalAlignment="Left" Margin="122,32,0,0" Grid.Row="4" VerticalAlignment="Top" RenderTransformOrigin="0.298,-0.332" Height="34" Width="90">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="IsEnabled" Value="False"/>
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding Path=(Validation.HasError), ElementName=ClassNameTextBox}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="IsEnabled" Value="True"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
        <Label Grid.Column="1" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="38"/>
        <Label Grid.Column="1" Content="Label" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Height="26" Width="38"/>
        <TextBox Name="ClassNameTextBox" TextChanged="ClassNameChangedEventHandler" Grid.Column="1"  HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" Width="200" Height="18">
            <TextBox.Text>
                <Binding
                 Path="className"
                 Source="{StaticResource ClassName}"
                 NotifyOnValidationError="True" ValidatesOnExceptions="True"
                 UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <utils:ClassNameValidator/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
        <TextBlock IsHitTestVisible="False" Text="Class name" Grid.Column="1" Grid.Row="2" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Height="18" Foreground="DarkGray">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=ClassNameTextBox}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <Label Grid.Column="1" Content="Header" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Center" Height="26" Width="87"/>
        <TextBox Name="HeaderFilename" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="4" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="200" Height="18"/>
        <Label Grid.Column="2" Content="Subfolder" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Height="26" Width="111" Grid.ColumnSpan="2"/>
        <ComboBox Grid.Column="2" HorizontalAlignment="Left" IsEditable="True" Grid.Row="2" VerticalAlignment="Center" Width="268" Grid.ColumnSpan="2" Height="21"/>
        <Label Grid.Column="1" Content="Implementation" HorizontalAlignment="Left" Grid.Row="5" VerticalAlignment="Center" Height="26" Width="105"/>
        <TextBox x:Name="ImplementationFilename" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="6" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="200" Height="18"/>
    </Grid>
</platform:DialogWindow>
